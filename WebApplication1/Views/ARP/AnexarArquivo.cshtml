@model PublicadorARP.Models.Dtos.ConsultarContratacaoDto
@{
    ViewData["Title"] = "Consultar ARPs";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="text-center">
                <h1 class="display-4">Consultar atas por contratação</h1>
                <p>Preencha as informações</p>
            </div>

            <form id="consultarAtasForm" asp-controller="ARP" asp-action="ConsultarAtasPorContratacao" method="get">
                <div class="row mb-3">
                    <div class="form-group col-6">
                        <label asp-for="anoCompra"></label>
                        <input asp-for="anoCompra" class="form-control" />
                    </div>
                    <div class="form-group col-6">
                        <label asp-for="sequencialCompra"></label>
                        <input asp-for="sequencialCompra" class="form-control" />
                    </div>
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
        </div>
    </div>
</div>