@model WebApp.Models.Dtos.AtaRegistroPrecoDto
@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1 class="display-4">Welcome</h1>
    <p>Learn about <a href="https://docs.microsoft.com/aspnet/core">building Web apps with ASP.NET Core</a>.</p>

    <form asp-controller="ARP" asp-action="InserirAtaRegistroPreco" method="post" enctype="multipart/form-data">
        <div class="form-group">
            <label asp-for="anoCompra"></label>
            <input asp-for="anoCompra" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="sequencialCompra"></label>
            <input asp-for="sequencialCompra" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="numeroAta"></label>
            <input asp-for="numeroAta" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="anoAta"></label>
            <input asp-for="anoAta" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="dataAssinatura"></label>
            <input asp-for="dataAssinatura" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="dataInicioVigencia"></label>
            <input asp-for="dataInicioVigencia" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="dataFimVigencia"></label>
            <input asp-for="dataFimVigencia" type="date" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="arquivo"></label>
            <input asp-for="arquivo" type="file" class="form-control-file" />
        </div>
        <button type="submit" class="btn btn-primary">Enviar</button>
    </form>
</div>
